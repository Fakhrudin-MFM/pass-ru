{
  "parametrised": true,
  "namespace": "pass-ru",
  "globals": {
    "defaultModule": "pa",
    "staticOptions": {
        "maxAge": 3600000
    },
    "plugins": {
      "sessionHandler": {
        "storage": {
          "type": "redis",
          "options": {
            "host": "[[redis.host]]",
            "port": "[[redis.port]]"
          }
        }
      },
      "redis": {
        "module": "core/impl/cache/redis/RedisRepository",
        "options": {
          "enabled": "true",
          "host": "[[redis.host]]",
          "port": "[[redis.port]]"
        }
      }
    }
  },
  "deployer": "built-in",
  "modules": {
    "portal": {
      "import": {
        "src": "applications/pass-ru/portal",
        "namespace": "iondv"
      },
      "globals": {
        "portalName": "ИОН ДВ. Пропуск",
        "default": "index",
        "templates": [
          "applications/pass-ru/portal/view/templates"
        ],
        "statics": {
          "static": "applications/pass-ru/portal/view/static"
        },
        "pageTemplates": {
          "navigation": {
            "index": "index",
            "login": "login",
            "register": "register",
            "profile": "profile"
          },
          "errors": {
            "404": "404"
          }
        }
      }
    },
    "pa": {
      "globals": {
        "default": "pass/index",
        "noAuth": true,
        "templates": [
          "applications/pass-ru/pa/view/templates"
        ],
        "statics": {
          "static": "applications/pass-ru/themes/pass/node_modules"
        },
        "di": {
          "backendApi": {
            "module": "applications/pass-ru/lib/BackendApi",
            "options": {
              "url": "[[passapi.url]]",
              "clientLogin": "[[passapi.login]]",
              "clientPassword": "[[passapi.password]]"
            }
          },
          "sms": {
            "module": "applications/pass-ru/lib/impl/sms/SmsMessageService",
            "options": {

            }
          },
          "passCtrl": {
            "module": "applications/pass-ru/pa/controllers/pass",
            "initMethod": "init",
            "initLevel": 0,
            "options": {
              "module": "ion://module",
              "log": "ion://sysLog",
              "sms": "ion://sms",
              "cache": "ion://redis",
              "backendApi": "ion://backendApi"
            }
          }
        }
      }
    }
  }
}
